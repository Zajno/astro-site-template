---
import PageLayot from 'layouts/page.astro';
import { Page404 as PageSettings } from 'sitemap/pages';

import { type Locales } from 'sitemap/copyright';
import MainSection from 'sections/page404/main/view.astro';

type Props = {
	locale: Locales
};

const { locale = 'en' } = Astro.props;

---

<PageLayot
    {...PageSettings}
    locale={locale}
    isActiveFooter={false}
    isActiveMobileMenu={false}
    isActivePreloader={false}
>
    <MainSection />
</PageLayot>
