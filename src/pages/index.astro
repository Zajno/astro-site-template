---
import 'styles/base.sass';
import 'styles/home/index.sass';

import PageLayot from 'layouts/page.astro';
import { HomePage as PageSettings } from 'sitemap/pages';

const COPY = PageSettings.copy;

import AstroImage from 'assets/img/astro.jpeg'
---

<PageLayot {...PageSettings}>
	<main id={`${PageSettings.id}`} data-page-id={`${PageSettings.id}`}>
		<h1>{COPY.title}</h1>
		<h2>{COPY.subtitle}</h2>
		<img src={AstroImage} class="astronaut" alt="Astronaut"/>
	</main>
</PageLayot>

<script type="module" src="./src/scripts/pages/homePage"></script>