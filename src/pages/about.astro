---
import PageLayot from 'layouts/page.astro';
import { AboutPage as PageSettings } from 'sitemap/pages';
import { type Locales, defaultLang } from 'sitemap/copyright';
import { AboutPageSections } from 'components/sections/sectionTypes';
import HeroSection from 'components/sections/about/hero/view.astro';

type Props = {
	locale: Locales
};
const { locale = defaultLang } = Astro.props;

const COPY = PageSettings.copy[locale];
---

<PageLayot {...PageSettings} locale={locale}>
	<HeroSection id={AboutPageSections.Hero} COPY={COPY.heroSection} />
</PageLayot>
