---
import type { Environments } from 'config';
import type { AppConfigType } from 'app/utils/config';

import { getFullVersionName } from 'config/version';

declare const __ENABLE_LOGGER__: boolean;
declare const __APP_VERSION__: string;
declare const __APP_NAME__: string;
declare const __APP_ENV__: string;
declare const __APP_HASH__: string;

const AppConfig: AppConfigType = {
    e: __APP_ENV__ as Environments || 'development',
    l: __ENABLE_LOGGER__ === true || __ENABLE_LOGGER__ as any === 'true' || false,
    v: `${__APP_NAME__} ${getFullVersionName(__APP_VERSION__, __APP_ENV__ as Environments, __APP_HASH__)}`,
    f: {},
};
---

<script define:vars={{cfg: AppConfig}}>
    window.AppConfig = cfg;
</script>