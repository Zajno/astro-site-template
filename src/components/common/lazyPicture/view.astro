---
type Props = {
	mobileImage: string,
    tabletImage: string,
    desktopImage: string,
    loadPrioprity: number,
    alt: string,
    className: string,
};

const {
    mobileImage,
    tabletImage,
    desktopImage,
    loadPrioprity,
    alt,
    className,
} = Astro.props;

---

<picture>
    <source srcset={mobileImage} media="(max-width: 480px)" />
    <source srcset={tabletImage} media="(max-width: 1024px)" />
    <source srcset={desktopImage} media="(min-width: 1025px)" />
    <img class={`lazy ${className}`} alt={alt} data-load-priority={loadPrioprity}>
</picture>
